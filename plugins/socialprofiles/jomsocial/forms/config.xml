<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="PROFILE_IMPORT">
        <field name="import_always"
               type="radio"
               label="COM_JFBCONNECT_JOMSOCIAL_PROFILE_IMPORT_ALWAYS_LABEL"
               description="COM_JFBCONNECT_JOMSOCIAL_PROFILE_IMPORT_ALWAYS_DESC"
               default="0"
               labelclass="config_setting"
               class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="import_avatar"
               type="radio"
               label="COM_JFBCONNECT_JOMSOCIAL_PROFILE_IMPORT_AVATAR_LABEL"
               description="COM_JFBCONNECT_JOMSOCIAL_PROFILE_IMPORT_AVATAR_DESC"
               default="0"
               labelclass="config_setting"
               class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="import_cover_photo"
               type="radio"
               label="COM_JFBCONNECT_JOMSOCIAL_PROFILE_IMPORT_COVER_PHOTO_LABEL"
               description="COM_JFBCONNECT_JOMSOCIAL_PROFILE_IMPORT_COVER_PHOTO_DESC"
               default="0"
               labelclass="config_setting"
               class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>
    <fieldset name="NORMAL_REGISTRATION">
        <field name="skip_tos"
               type="radio"
               label="COM_JFBCONNECT_JOMSOCIAL_NORMAL_REGISTRATION_SKIP_TOS_LABEL"
               description="COM_JFBCONNECT_JOMSOCIAL_NORMAL_REGISTRATION_SKIP_TOS_DESC"
               default="0"
               labelclass="config_setting"
               class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="registration_show_fields"
               type="radio"
               label="COM_JFBCONNECT_JOMSOCIAL_NORMAL_REGISTRATION_SHOW_PROFILE_FIELDS_LABEL"
               description="COM_JFBCONNECT_JOMSOCIAL_NORMAL_REGISTRATION_SHOW_PROFILE_FIELDS_DESC"
               default="0"
               labelclass="config_setting"
               class="btn-group">
            <option value="0">COM_JFBCONNECT_JOMSOCIAL_NORMAL_REGISTRATION_SHOW_PROFILE_FIELDS_NONE_OPTION</option>
            <option value="1">COM_JFBCONNECT_JOMSOCIAL_NORMAL_REGISTRATION_SHOW_PROFILE_FIELDS_REQUIRED_OPTION</option>
            <option value="2">COM_JFBCONNECT_JOMSOCIAL_NORMAL_REGISTRATION_SHOW_PROFILE_FIELDS_ALL_OPTION</option>
        </field>
        <field name="imported_show_fields"
               type="radio"
               label="COM_JFBCONNECT_JOMSOCIAL_NORMAL_REGISTRATION_SHOW_IMPORTED_FIELDS_LABEL"
               description="COM_JFBCONNECT_JOMSOCIAL_NORMAL_REGISTRATION_SHOW_IMPORTED_FIELDS_DESC"
               default="1"
               labelclass="config_setting"
               class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>
    <fieldset name="STATUS_UPDATES">
        <field name="import_status"
               type="radio"
               label="COM_JFBCONNECT_JOMSOCIAL_STATUS_UPDATES_IMPORT_ENABLE_LABEL"
               description="COM_JFBCONNECT_JOMSOCIAL_STATUS_UPDATES_IMPORT_ENABLE_DESC"
               default="1"
               labelclass="config_setting"
               class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="push_status"
               type="radio"
               label="COM_JFBCONNECT_JOMSOCIAL_STATUS_UPDATES_PUSH_STATUS_LABEL"
               description="COM_JFBCONNECT_JOMSOCIAL_STATUS_UPDATES_PUSH_STATUS_DESC"
               default="0"
               labelclass="config_setting"
               class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>
    <fieldset name="PROFILE_TYPES">
        <field name="profiletype_default"
               type="socialprofilesjomsocialprofiletypes"
               label="COM_JFBCONNECT_JOMSOCIAL_PROFILE_TYPES_DEFAULT_LABEL"
               description="COM_JFBCONNECT_JOMSOCIAL_PROFILE_TYPES_DEFAULT_DESC"
               default="0"
               labelclass="config_setting"
                >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="profiletype_visible"
               type="radio"
               label="COM_JFBCONNECT_JOMSOCIAL_PROFILE_TYPES_VISIBLE_LABEL"
               description="COM_JFBCONNECT_JOMSOCIAL_PROFILE_TYPES_VISIBLE_DESC"
               default="0"
               labelclass="config_setting"
               class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>

</form>